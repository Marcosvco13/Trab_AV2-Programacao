@model Trab_AV2.VM.VendaVM

@{
    ViewData["Title"] = "Detail";
}
<div>
    <h4>Detalhes da Venda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDaVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDaVenda)
        </dd>
    </dl>
</div>

<div>
    <h2>Produtos</h2>
    <div>
        <table class="table" id="tabelaItens">
            <thead>
                <tr>
                    <th>
                        Produto
                    </th>
                    <th>
                        Quantidade
                    </th>
                    <th>
                        Valor
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model != null && Model.ListaProdutos != null)
                    {


                        for (int i = 0; i <= Model.ListaProdutos.Count - 1; i++)
                        {
                            <tr>
                                <td>
                                    @Model.ListaProdutos[i].NomeProduto
                                    <input type="hidden" name="ListaProdutos[@i].Produto" value="@Model.ListaProdutos[i].NomeProduto">
                                </td>
                                <td>
                                    @Model.ListaProdutos[i].Quantidade
                                    <input type="hidden" value="@Model.ListaProdutos[i].Quantidade" name="ListaProdutos[@i].Quantidade">
                                </td>
                                <td>

                                    @Model.ListaProdutos[i].ValorVenda
                                    <input type="hidden" value="@Model.ListaProdutos[i].ValorVenda" name="Model.ListaProdutos[@i].ValorVenda">
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    @Html.ActionLink("Editar", "Manter", new { codVenda = Model.CodigoVenda }) |
    <a asp-action="Index">Back to List</a>
</div>