﻿@using Microsoft.AspNetCore.Identity
@using Trab_AV2.Areas.Identity.Data

@model Trab_AV2.Model.Models.Venda

@inject UserManager<Trab_AV2User> UserManager

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>VendaVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="IdProduto" class="control-label"></label>
                <select class="form-select" id="cboProduto" asp-for="IdProduto" asp-items="@ViewBag.Produto">
                    <option selected value="">Selecione um Produto</option>
                </select>
                <span asp-validation-for="IdProduto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataVenda" class="control-label"></label>
                <input asp-for="DataVenda" class="form-control" />
                <span asp-validation-for="DataVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorVenda" class="control-label"></label>
                <input asp-for="ValorVenda" class="form-control" />
                <span asp-validation-for="ValorVenda" class="text-danger"></span>
            </div>

            


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


            <!-- Tabela para exibir os produtos selecionados -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <h4>Carrinho</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Quantidade</th>
                                <!-- Adicione outras colunas conforme necessário -->
                            </tr>
                        </thead>
                        <tbody id="tabelaProdutosSelecionados">
                            <!-- Aqui serão listados os produtos selecionados -->
                        </tbody>
                    </table>
                </div>
            </div>

            <button type="button" id="btnAdicionar" class="btn btn-primary">Adicionar</button>
        </form>

        



    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var nomeProdutoSelecionado = ''; // Variável para armazenar o nome do produto selecionado
            var idProdutoSelecionado = ''; // Variável para armazenar o ID do produto selecionado

            // Captura a mudança na seleção do produto
            $('#cboProduto').change(function () {
                nomeProdutoSelecionado = $('#cboProduto option:selected').text();
                idProdutoSelecionado = $('#cboProduto').val();
            });

            // Quando o botão "Adicionar" for clicado
            $('#btnAdicionar').click(function () {
                if (nomeProdutoSelecionado && idProdutoSelecionado) {
                    $('#tabelaProdutosSelecionados').append(
                        '<tr>' +
                        '<td>' + nomeProdutoSelecionado + '</td>' +
                        '<td><input type="number" class="form-control quantidade" value="1" /></td>' +
                        // Adicione outras colunas conforme necessário
                        '</tr>'
                    );
                }
            });

            // Quando o botão "Create" for clicado
            $('form').submit(function (event) {
                event.preventDefault();

                // Aqui você pode coletar os produtos da tabela de produtos selecionados
                var produtosSelecionados = [];
                $('#tabelaProdutosSelecionados tr').each(function () {
                    var nomeProduto = $(this).find('td:first').text();
                    var quantidade = $(this).find('.quantidade').val();

                    produtosSelecionados.push({
                        NomeProduto: nomeProduto,
                        Quantidade: quantidade
                    });
                });

                // Faça algo com a lista de produtos selecionados (por exemplo, enviar para o servidor)
                console.log(produtosSelecionados);
            });
        });




        $('form').submit(function (event) {
            event.preventDefault();

            var produtosSelecionados = [];
            $('#tabelaProdutosSelecionados tr').each(function () {
                var nomeProduto = $(this).find('td:first').text();
                var quantidade = $(this).find('.quantidade').val();

                produtosSelecionados.push({
                    NomeProduto: nomeProduto,
                    Quantidade: quantidade
                });
            });

            // Envie os dados da lista 'produtosSelecionados' para a action Create
            $.ajax({
                url: '/Venda/Create',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ produtosSelecionados: produtosSelecionados }),
                success: function (response) {
                    // Lógica de sucesso, se necessário
                    console.log(response);
                },
                error: function () {
                    // Lógica de erro, se necessário
                }
            });
        });
    </script>
}

